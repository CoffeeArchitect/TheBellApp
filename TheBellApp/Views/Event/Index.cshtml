@model IEnumerable<Event>

@{
    ViewData["Title"] = "Event";
}

<section class="event spad">
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-primary">
                Список событий
            </h2>
        </div>
        <div class="col-6">
            Добавить новое событие
        </div>
    </div>
    <br/>
    <br/>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Описание
                    </th>
                    <th>
                        Место
                    </th>
                    <th>
                        Изображение
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="40%">@obj.Title</td>
                        <td width="20%">@obj.Description</td>
                        <td width="20%">@obj.Location</td>
                        <td width="20%">@obj.Image</td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Нет соботий</p>
    }
</div>
</section>

<section class="countdown spad">
        
    </section>